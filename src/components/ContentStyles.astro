---
import { getLangFromUrl } from "../i18n/utils";
import "../styles/globals.css";
---

<style is:global>
  main {
    margin: auto;
    padding: 15px;
    margin-left: 25vw;
    margin-right: 25vw;
  }
  main p,
  main h1,
  main h2 {
    width: 50vw;
  }
  @media only screen and (max-width: 800px) {
    main {
      margin-left: 15vw;
      margin-right: 15vw;
    }
    main p,
    main h1,
    main h2 {
      width: 70vw;
    }
  }
  @media only screen and (max-width: 600px) {
    main {
      margin-left: auto;
      margin-right: auto;
    }
    main p,
    main h1,
    main h2 {
      width: 95vw;
    }
  }
</style>
